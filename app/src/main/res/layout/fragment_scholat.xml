    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage.scholat.ScholatFragment">

    <jxpl.scnu.curb.utils.ScrollChildSwipeRefreshLayout
        android:id="@+id/scholat_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <jxpl.scnu.curb.utils.autoFitRecycler.AutoFitRecyclerView
            android:id="@+id/scholat_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </jxpl.scnu.curb.utils.ScrollChildSwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
